#include <stdio.h>
#include <stdlib.h>
#include <string.h>

struct musica{
char titulo[256];
  char artista[256];
  char letra[256];
  int codigo;
  int execucoes;
}; 


struct nodo{
  struct nodo *prox;
  struct musica *music;
};

struct descp{
  struct nodo pilha;
  int tamanho;
};



int main() {

struct descp *NovaPilha;
int op;


while(op!=0){

printf("\n1-Criar PILHA\n");
printf("2-Inserir música\n");
printf("3-Consultar música\n");
printf("4-Imprimir pilha\n");
printf("5-Remover da pilha\n");
printf("6-Libera\n");
printf("0-Sair\n");

scanf("%d", &op);


case 1:

NovaPilha=CriaDesc();

break;

case 2:

=CriaMusica();

break;

case 3:
break;

case 4:
break;

case 5:
break;

case 6:
break;

case 0:
printf("\nSaindo do programa!\n");
return -1;
break;

default:
printf("\nInsira uma opção válida\n");
break;
}


return 0;
}


struct descp CriaDesc(){

struct descp *Pilha = (struct descp* )malloc(sizeof(struct descp));

Pilha->tamanho=0;
Pilha->pilha=NULL;

return Pilha;
}


struct nodo CriaNodo(){

struct nodo *novoNodo=(struct nodo)malloc(sizeof(struct nodo));

novoNodo->prox=NULL;


}

